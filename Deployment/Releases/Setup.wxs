      </Directory>
    </Directory>

    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="KZMaker.exe" Guid="44ada07f-256a-5833-93b2-385957f2b50f">
        <File Id="KZMaker.exe" Name="KZMaker.exe" Source="./Setup.exe" KeyPath="yes" />
