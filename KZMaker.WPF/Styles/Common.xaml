<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- COLORS -->
    <Color x:Key="PrimaryColor1">#212121</Color>
    <Color x:Key="PrimaryColor2">#2E2E2E</Color>
    <Color x:Key="ActiveColor1">#0099F0</Color>
    
    <!-- BRUSHES -->
    <SolidColorBrush x:Key="PrimaryBrush1" Color="{StaticResource PrimaryColor1}"/>
    <SolidColorBrush x:Key="PrimaryBrush2" Color="{StaticResource PrimaryColor2}"/>
    <SolidColorBrush x:Key="ActiveBrush1" Color="{StaticResource ActiveColor1}"/>

</ResourceDictionary>