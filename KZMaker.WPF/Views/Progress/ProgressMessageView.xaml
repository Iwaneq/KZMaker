<UserControl x:Class="KZMaker.WPF.Views.Progress.ProgressMessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KZMaker.WPF.Views.Progress"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="220">
    <Grid>
        <TextBlock Text="{Binding Message, FallbackValue='Progress text'}"
                   TextWrapping="WrapWithOverflow"
                   TextAlignment="Center"
                   Foreground="Green"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
